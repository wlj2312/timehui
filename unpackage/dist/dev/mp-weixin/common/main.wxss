/* 一行显示 */
.clamp{
	overflow:hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	display: block;
}
/* 二行显示 */
.ellipsis{
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
/* 三行显示 */
.threeline{
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
}
